<div class="container">
    <h2>Welcome to the Habit Tracker!</h2>

    <div class="quote">
        <h3>Motivational Quote</h3>
        <p>{{quote}}</p>
    </div>

    <div class="habit-form">
        <h3>Add a new habit</h3>
        <form id="habit-form">
            <input type="text" id="habit-name" placeholder="Enter habit name" required>
            <input type="text" id="habit-description" placeholder="Enter habit description" required>
            <select id="habit-frequency" class="styled-select" required>
                <option value="" disabled selected>Select frequency</option>
                <option value="daily">Daily</option>
                <option value="weekly">Weekly</option>
                <option value="monthly">Monthly</option>
            </select>
            <button type="submit">Add Habit</button>
        </form>
    </div>

    <div class="habit-list">
        <h3>Your Habits</h3>
        <ul id="habit-list">
            {{#each habits}}
                <li>{{this.name}}</li>
            {{else}}
                <li>No habits found.</li>
            {{/each}}
        </ul>
    </div>
</div>
